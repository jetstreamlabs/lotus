{
  "arrowParens": "avoid",
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": true,
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "semi": false,
        "printWidth": 80,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.md",
      "options": {
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}
